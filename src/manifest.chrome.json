{
  "name": "Page load time",
  "version": "4.1",
  "manifest_version": 3,
  "description": "Displays page load time in the toolbar",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "stopwatch.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "browser-polyfill.min.js",
        "performance.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "stopwatch.png",
    "48": "stopwatch.png",
    "128": "stopwatch.png"
  }
}
