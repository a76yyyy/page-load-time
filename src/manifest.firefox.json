{
  "name": "Page load time",
  "version": "4.1",
  "manifest_version": 3,
  "description": "Displays page load time in the toolbar",
  "background": {
    "scripts": [
      "browser-polyfill.min.js",
      "background.js"
    ]
  },
  "action": {
    "default_icon": "stopwatch.svg",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "browser-polyfill.min.js",
        "performance.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "stopwatch.svg",
    "48": "stopwatch.svg",
    "128": "stopwatch.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{da981873-0eb3-4e62-9dcf-fcb6c349a676}"
    }
  }
}
